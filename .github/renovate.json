{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 5,
  "timezone": "Asia/Ho_Chi_Minh",
  "schedule": [
    "* 0-6 * * 0,6"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "gradle/npm.versions.toml"
      ],
      "overridePackageName": "{{replace 'dev:' '' packageName}}",
      "overrideDatasource": "npm",
      "matchPackageNames": [
        "dev:{/,}**"
      ]
    }
  ]
}
